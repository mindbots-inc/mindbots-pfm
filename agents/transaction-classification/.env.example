# Transaction Classification Agent Configuration

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Agent Settings
TRANSACTION_CLASSIFIER_CLASSIFICATION_MODEL=gpt-4
TRANSACTION_CLASSIFIER_CONFIDENCE_THRESHOLD=0.85
TRANSACTION_CLASSIFIER_BATCH_SIZE=100
TRANSACTION_CLASSIFIER_MAX_CONCURRENT_REQUESTS=10

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
TRANSACTION_CLASSIFIER_CACHE_TTL=3600

# Memory Cell Integration (Optional)
TRANSACTION_CLASSIFIER_MEMORY_CELL_URL=http://localhost:8003

# Logging
TRANSACTION_CLASSIFIER_LOG_LEVEL=INFO

# Available Categories (comma-separated)
# Default: groceries,restaurants,transportation,utilities,entertainment,healthcare,shopping,income,transfer,other