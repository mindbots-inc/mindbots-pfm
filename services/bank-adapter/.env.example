# Bank Adapter Service Configuration

# Application Settings
APP_NAME="Bank Adapter Service"
APP_VERSION="0.1.0"
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX="/api/v1"

# CORS Settings (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pfm

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Plaid Configuration
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox
PLAID_PRODUCTS=["transactions","accounts","balance","identity"]
PLAID_COUNTRY_CODES=["US","CA","GB"]

# Yodlee Configuration
YODLEE_CLIENT_ID=your_yodlee_client_id_here
YODLEE_CLIENT_SECRET=your_yodlee_client_secret_here
YODLEE_API_URL=https://sandbox.api.yodlee.com/ysl

# Security Settings
SECRET_KEY=change-me-in-production-to-a-random-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7